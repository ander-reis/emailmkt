{% extends '@layout/default.html.twig' %}

{% block title %}
    Novo Contato - {{ parent() }}
{% endblock %}

{%  block page_header %}
    Novo Contato
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-body">

                    {{ form(myForm) }}

                    {#teste render form com helper#}
                    {#{{ attribute(formHelper, '__invoke', [myForm]) | raw  }}#}

                    <form name="form" role="form" method="post" action="{{ url('customer.create') }}">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Nome:</label>
                                <input type="text" name="name" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" name="email" class="form-control">
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Incluir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}